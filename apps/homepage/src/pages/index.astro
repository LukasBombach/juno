---
import { Editor } from "../components/Editor";
import junoLogo from '../assets/juno.svg';
import bgImage from '../assets/background.svg';
import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>juno</title>
	</head>
	<body class="h-screen bg-purple text-white grid grid-cols-[120px_130px_250px_1fr_120px] grid-rows-[100px_24px_62px_75px_44px_1fr_100px] bg-(image:--background)" style={{"--background": `url(${bgImage.src})`}}>
		<img src={junoLogo.src} width="124" height="62" alt="Juno Logo" class="row-start-3 row-end-4 col-start-2" />
		<button class="row-start-5 row-end-6 col-start-2 grid place-content-center bg-neutral-100 rounded-sm text-neutral-700 font-semibold cursor-pointer">Get Started</button>
		<div class="row-start-2 -row-end-2 -col-start-3 -col-end-2 rounded-xl shadow-window p-5 py-7 bg-editor-light dark:bg-editor-dark grid">
			<Editor client:only className="size-full overflow-hidden" />
		</div>
	</body>
</html>
